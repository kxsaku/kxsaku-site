{
  "expo": {
    "name": "SNS Portal",
    "slug": "sns-portal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "sns",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#050315"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sns.portal",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "com.sns.portal",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#050315"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://kxsaku.com"
        }
      ],
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#b37cff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SNS Portal to access your photos to share attachments."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": "https://kxsaku.com"
      },
      "eas": {
        "projectId": "sns-portal"
      }
    }
  }
}
